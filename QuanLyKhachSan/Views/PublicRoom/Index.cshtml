
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="h" style="
    background-image: url('https://phuongviethcm.com/wp-content/uploads/2020/04/banner-khach-san-1200x800.jpg');
    height: 500px;
    width: 100%;
   
">
</div>
    <div class="overlay"></div>
   
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in ViewBag.List)
                    {
                    <div class="col-md-4">
                        <div class="destination">
                            <a href="/PublicRoom/DetailRoom/@item.idRoom">
                                <img width="380px" class="img img-2 d-flex justify-content-center align-items-center" src="/Content/images/@item.image">

                            </a>
                            <div class="text p-3">
                                <div class="d-flex">
                                    <div class="one">
                                        <h3><a href="/PublicRoom/DetailRoom/@item.idRoom">@item.name</a></h3>
                                        <p class="rate">
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <i class="icon-star"></i>
                                            <span>@item.view lượt xem</span>
                                        </p>
                                    </div>

                                    @{
                                        int price1 = item.cost - item.cost * item.discount / 100;
                                    }

                                </div>
                                @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
                                <p class="days"><span>@item.Type.name</span></p>
                                <p class="days"><span>Số lượng người lớn: @item.numberAdult</span></p>
                                <p class="days"><span>Số lượng trẻ em: @item.numberChildren</span></p>
                                <hr>
                                <p class="bottom-area d-flex">
                                    <span>Giá phòng : @price1 VNĐ</span>
                                    <span class="ml-auto"><a href="/PublicRoom/DetailRoom/@item.idRoom">Xem chi tiết</a></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    }

                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    <li><a href="/PublicRoom/Index/@b">&lt;</a></li>

                                }
                                else
                                {
                                    <li></li>
                                }
                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        <li class="active"><a href="/PublicRoom/Index/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li ><a href="/PublicRoom/Index/@i">@i</a></li>
                                    }

                                }
                              
                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    <li><a href="/PublicRoom/Index/@a">&gt;</a></li>

                                }
                                else
                                {
                                    <li></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
